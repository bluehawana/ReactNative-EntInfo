# Firebase Configuration
# Get these values from Firebase Console → Project Settings → Your Apps

# iOS Configuration (from GoogleService-Info.plist)
FIREBASE_IOS_API_KEY=your_ios_api_key_here
FIREBASE_IOS_CLIENT_ID=your_ios_client_id_here
FIREBASE_IOS_APP_ID=your_ios_app_id_here
FIREBASE_GCM_SENDER_ID=your_sender_id_here
FIREBASE_BUNDLE_ID=com.twowatch.app

# Android Configuration (from google-services.json)
FIREBASE_ANDROID_API_KEY=your_android_api_key_here
FIREBASE_ANDROID_APP_ID=your_android_app_id_here
FIREBASE_ANDROID_PACKAGE=com.twowatch.app
FIREBASE_ANDROID_CLIENT_ID1=your_android_oauth_client_id_here
FIREBASE_ANDROID_CERT_HASH=your_sha1_certificate_hash_here

# Common Firebase Settings
FIREBASE_PROJECT_ID=watch-8f60a
FIREBASE_PROJECT_NUMBER=your_project_number
FIREBASE_STORAGE_BUCKET=watch-8f60a.appspot.com
FIREBASE_DATABASE_URL=https://watch-8f60a-default-rtdb.firebaseio.com

# TMDB API Key (if using environment variable instead of hardcoded)
TMDB_API_KEY=your_tmdb_api_key_here

# Google Sign-In
GOOGLE_WEB_CLIENT_ID=your_web_client_id_here

# Apple Sign-In (iOS only, no key needed)
# BUNDLE_ID should match FIREBASE_BUNDLE_ID above
